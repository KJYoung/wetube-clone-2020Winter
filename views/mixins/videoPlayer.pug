mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeButton
                    i.fas.fa-volume-up
                span
                    span#currentTime 0
                    | / 
                    span#totalTime 0
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand