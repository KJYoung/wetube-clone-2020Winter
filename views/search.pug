extends layouts/main
include mixins/videoBlock

block content
    .search__header
        h3 Searching for : #{searchingBy}
    .search__videos
        if videos.length === 0
            h4 No Videos Found.
        each video in videos
            +videoBlock({
                title: video.title,
                views: video.views,
                likes: video.likes,
                videoFile: video.fileUrl,
                id: video.id,
                createdAt: video.createdAt
            })