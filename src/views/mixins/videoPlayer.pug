mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video.video__notFullScreen(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayBtn
                    i.fas.fa-play
                input.jsPlayRange#jsPlayRange(type="range", min="0", max="100", step="0.5", value="0")
                span#timeIndicator
                    span#currentTime 0:00
                    |/
                    span#totalTime 0:00
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                .divVolumeRange
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.05", value="0.5")
            .videoPlayer__column
                span#jsFullScreen
                    i.fas.fa-expand