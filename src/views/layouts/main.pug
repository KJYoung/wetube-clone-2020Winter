include ../mixins/message

doctype html
html
    head
        link(rel="shortcut icon", type="image/x-icon", href="https://cafeptthumb-phinf.pstatic.net/MjAyMTAxMjdfNTYg/MDAxNjExNjczMzY1MDEx.GvLh_0bCRtpVMjS1HXSsy-5YuuuwYEQ28YkoTaKlQNEg.A1fwICYPkJap5g5mC26X8eUCQUtcAFz8dDlpnWU58Zgg.PNG/wetube_logo.png?type=w1600")
        link(rel="stylesheet",href="https://use.fontawesome.com/releases/v5.15.1/css/all.css",integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp",crossorigin="anonymous")
        link(rel="stylesheet",href="/static/styles.css")
        title  #{pageTitle} | #{siteName}
        meta(http-equiv="Content-Security-Policy" content="default-src *")

    body
        -if(messages.error)
            +message({
                type: 'flash-message-error',
                text: messages.error
            })
        -else if(messages.info)
            +message({
                type: 'flash-message-info',
                text: messages.info 
            })
        -else if(messages.success)
            +message({
                type: 'flash-message-success',
                text: messages.success
            })
        include ../partials/header
        main
            block content
        include ../partials/footer
        script(src="/static/main.js")